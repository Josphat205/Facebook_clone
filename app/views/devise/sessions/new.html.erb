<div class="row mx-auto w-75 my-5">

  <div class="col-md-7 col-sm-12">
   <div class="" >
     <h2 class="text-start" style='color:blue;'>Facebook</h2>
     <h4 class="text-start" style='width:400px;'>Recent logins</h4>
     <p class="text-start" style='width:400px;'>Click your picture or add an Account</p>
   </div>     
  <div class="row">
  <div class="col-sm-4">
  <div class="card">
    <div class="card-body">
      <img src="https://res.cloudinary.com/defpepdn3/image/upload/v1679140657/avatar_bbnoow.jpg" class="card-img-top" alt="...">
    </div>
    <div class="card-footer">
    <%= link_to "Add Account", new_registration_path(resource_name),class:"text-primary list-unstyled"%><br />
    </div>
  </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
    <div class="card-body">
      <img src="https://res.cloudinary.com/defpepdn3/image/upload/v1679140657/avatar_bbnoow.jpg" class="card-img-top" alt="...">
    </div>
    <div class="card-footer">
    <%= link_to "Add Account", new_registration_path(resource_name),class:"text-primary list-unstyled"%><br />
    </div>
  </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <img src="https://res.cloudinary.com/defpepdn3/image/upload/v1679140657/avatar_bbnoow.jpg" class="card-img-top" alt="...">
      </div>
      <div class="card-footer">
       <%= link_to "Add Account", new_registration_path(resource_name),class:"text-primary list-unstyled"%><br />
      </div>
    </div>
  </div>
</div>
  </div>
  <div class="col-md-5 col-sm-12">
  <div class="card shadow-lg p-3 mb-5 bg-white rounded" >
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.email_field :email, placeholder:"Enter Your Email", class:"form-control"%>
        </div>
        <div class="form-group mb-3">
          <%= f.password_field :password,  placeholder:"Enter Password", class:"form-control"%>
        </div>
        <div>
          <%= f.submit "Log in", class:"btn btn-primary w-100" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-center align-items-center my-3">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <hr>
      <div class="d-flex justify-content-center align-items-center my-3">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
       <%= link_to "Create new Account", new_registration_path(resource_name),class:"btn btn-success"%><br />
      <% end %>
      </div>
     
    </div>
    <p class="text-center"><b>Create a Page </b> for a celebrity, brand or business</p>
  </div>
  </div>
</div>